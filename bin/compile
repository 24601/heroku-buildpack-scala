#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# parse args
BUILD_DIR=$1
CACHE_DIR=$2

# chdir as sbt expects
cd $BUILD_DIR

# unpack cache
for DIR in ".ivy2" ".sbt" ".jetty"; do
  rm -rf $DIR
  if [ -d $CACHE_DIR/$DIR ]; then
    cp -r $CACHE_DIR/$DIR $DIR
  fi
done

# install sbt with base repository
SBT_URL="http://s3.amazonaws.com/sclasen-langpack-scala/sbt-01.tar.gz"

if [ ! -d .sbt ]; then
  echo -n "-----> Installing SBT..."
  curl --silent --max-time 60 --location $SBT_URL | tar xz
  chmod +x .sbt/sbt
  echo " done"
fi

# build app
echo "-----> Building app with SBT"
echo "-----> executing sbt heroku"

java -Xmx512M -Duser.home=$BUILD_DIR -jar .sbt/sbt-launch-0.7.5.jar clean clean-lib update heroku 2>&1 | sed -u 's/^/       /'
if [ "${PIPESTATUS[*]}" != "0 0" ]; then
  echo " !     Failed to build app with SBT"
  exit 1
fi

# repack cache
mkdir -p $CACHE_DIR
for DIR in ".ivy2" ".sbt" ".jetty"; do
  rm -rf $CACHE_DIR/$DIR
  cp -r $DIR $CACHE_DIR/$DIR
done
